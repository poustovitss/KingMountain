
<% bank = Bank.last %>
<% if bank.active == false %>
  <center>
    <p><img src="/img/winner.gif"></p>
    <p><h4>Ожидайте создается новая игра...</h4></p>
  </center>
<% else %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <center><%= devise_error_messages! %></center>

  <div class="register_form">
    <h1 class="register_form_title">Регистрация</h1>
     <form action="">
      <div class="register_form_field">
        <label for="name">Ваше имя</label>
        <%= f.text_field :name %>
      </div>

      <div class="register_form_field">
        <label for="password">Пароль</label>
        <% if @minimum_password_length %>
      <em>(минимум <%= @minimum_password_length %> символов)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="register_form_field">
        <label for="password">Подвердите пароль</label>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="register_form_field">
        <label for="email">Электронная почта</label>
        <%= f.email_field :email %>
      </div>
      <div class="register_form_submit">
        <%= f.submit "Регистрация" %>
        <!-- <input type="submit" value="Регистрация"> -->
      </div>
      <% if session[:referred_by] %>
        <%=f.hidden_field :reffered_by, :value => session[:referred_by] %>
        <%= f.hidden_field :proviant, :value => false %>
      <% else %>
        <%= f.hidden_field :reffered_by, :value => 0 %>
        <%= f.hidden_field :proviant, :value => true %>
      <% end %>
    </form>
    <center><div class="register_form_social_title">Регистрация через соц. сети</div></center>
    <%= render "devise/shared/links" %>

  <div class="footer">
    <div class="container">
      <div class="footer_title">Нравится наш сервис? Поделитесь в социальных сетях:</div>
      <div class="footer_social">
        <a href="#" class="footer_social_item"><img src="<%= image_url('ic-ok.png')%>" height="39" width="39" alt="OK"></a>
        <a href="#" class="footer_social_item"><img src="<%= image_url('ic-fb.png')%>" height="26" width="12" alt="Facebook"></a>
        <a href="#" class="footer_social_item"><img src="<%= image_url('ic-inst.png')%>" height="24" width="24" alt="Instagram"></a>
        <a href="#" class="footer_social_item"><img src="<%= image_url('ic-vk.png')%>" height="18" width="30" alt="VK"></a>
        <a href="#" class="footer_social_item"><img src="<%= image_url('ic-tw.png')%>" height="20" width="24" alt="Twitter"></a>
        <a href="#" class="footer_social_item"><img src="<%= image_url('ic-telegram.png')%>" height="22" width="23" alt="Telegram"></a>
      </div>
      <div class="footer_logo">
        <img src="<%= image_url('footer_logo.png')%>" height="45" width="109" alt="Царь горы">
      </div>
      <div class="footer_copyright">
        ООО Игра - “Царь горы” 2017 Все права защищены.
      </div>
    </div>
  </div>
  <% end %> 
<% end %>